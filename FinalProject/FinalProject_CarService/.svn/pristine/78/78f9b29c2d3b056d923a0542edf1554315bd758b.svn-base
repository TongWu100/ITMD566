public interface BusinessDao {

	//登录
	Map<String, String> login(String userName,String password);
	
	//查看用户账户
	CustomerAccount getCustomerAccount(String email);
	
	//删除用户账户
	boolean delCustomerAccount(String email);
	
	//获取卖/租的车列表
